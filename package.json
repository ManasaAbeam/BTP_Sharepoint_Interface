{
  "name": "BTP_Sharepoint_Interface",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap-cloud-sdk/resilience": "^4.1.2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4.11.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "private": true,
  "cds": {
    "requires": {
      "connectivity": true,
      "destinations": true,
      "db": {
        "kind": "hana"
      },
      "sharepoint-fin": {
        "kind": "rest",
        "credentials": {
          "destination": "sharepoint-fin"
        }
      }
    },
    "server": {
      "body_parser": {
        "limit": "50mb"
      }
    }
  }
}
